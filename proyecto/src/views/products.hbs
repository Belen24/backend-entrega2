<h1>PRODUCTOS</h1>
<br/>

<hr />
<div>
    <button onclick="newCart()" id="newCart">Crear tu carrito de compras</button>
</div>
<div>
    Id del carrito:
    <span id="cartDiv"></span>
    <a href="http://localhost:8080/api/carts/{{cartDiv.innerHTML}}" id="cartLink">Ver carrito</a>
</div>
<br />


{{#if totalDocs}}

    <div>
        Listado de Productos
        <ul>
            {{#each payload}}
                <li>{{this.title}} - description: {{this.description}} - Price:$ {{this.price}} </li>
                <button onclick="addToCart('{{this._id}}')">Agregar al carrito</button>
                <hr>
            {{/each}}
        </ul>

    </div>

    <div>
        {{#if hasPrevPage}}
            <a href={{prevLink}}> << Anterior</a>
        {{/if}}
        {{page}}
        {{#if hasNextPage}}
            <a href={{nextLink}}>Siguiente >></a>
        {{/if}}
    </div>
    {{else}}
    <p>No hay productos</p>
    {{/if}}

   <script src="js/products.js" ></script>
